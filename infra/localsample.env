# CrowdStrike AI Pipeline Health Monitor - Environment Configuration
# Copy this to .env and fill in your values

# Database (SQLite by default, uncomment for Postgres)
DATABASE_URL=sqlite:///./demo.db
# DATABASE_URL=postgresql://user:password@localhost:5432/pipeline_monitor

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Alerting (Optional - for demo, these can be left empty)
SLACK_WEBHOOK_URL=
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
ALERT_EMAIL_TO=

# Health Check Configuration
HEALTH_CHECK_INTERVAL_SECONDS=30
LATENCY_THRESHOLD_MS=200
MAX_REMEDIATION_RETRIES=3

# Model Inference (for demo, uses mock client)
MODEL_ENDPOINT=mock://local
# MODEL_ENDPOINT=https://api-inference.huggingface.co/models/your-model

# Cloud Metrics Simulation
CLOUD_PROVIDER=aws  # aws, gcp, oci
SIMULATE_CLOUD_METRICS=true
