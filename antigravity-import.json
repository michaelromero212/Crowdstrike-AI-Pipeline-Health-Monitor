{
    "name": "crowdstrike-ai-pipeline-monitor",
    "version": "0.1.0",
    "description": "AI Pipeline Health Monitor for interview demo",
    "entrypoints": {
        "backend": "backend/app/main.py",
        "frontend": "frontend/package.json"
    },
    "commands": {
        "start": "docker-compose up --build",
        "dev:backend": "cd backend && uvicorn app.main:app --reload --port 8000",
        "dev:frontend": "cd frontend && npm run dev",
        "test": "cd backend && pytest && cd ../frontend && npm test",
        "demo": "bash scripts/demo_run.sh"
    },
    "ports": {
        "backend": 8000,
        "frontend": 3000
    },
    "environment": {
        "required": [],
        "optional": [
            "DATABASE_URL",
            "SLACK_WEBHOOK_URL"
        ]
    }
}